{
    "author": "Duane Sibilly <duane@sibilly.com>",
    "babel": {
        "env": {
            "test": {
                "plugins": [
                    "istanbul"
                ]
            }
        },
        "plugins": [
            "transform-line"
        ],
        "presets": [
            "@babel/preset-env"
        ]
    },
    "bugs": {
        "url": "https://github.com/dsibilly/presage/issues"
    },
    "description": "A set of utilities for working with ECMAScript Promises.",
    "devDependencies": {
        "@babel/cli": "~7.2.3",
        "@babel/core": "~7.2.2",
        "@babel/node": "~7.2.2",
        "@babel/preset-env": "~7.3.1",
        "@babel/register": "~7.0.0",
        "babel-plugin-istanbul": "~5.1.0",
        "babel-plugin-transform-line": "~0.5.0",
        "chai": "~4.2.0",
        "coveralls": "~3.0.2",
        "cross-env": "~5.2.0",
        "eslint": "~5.13.0",
        "eslint-plugin-isotropic": "~0.2.0",
        "mocha": "~5.2.0",
        "nyc": "~13.3.0",
        "pre-commit": "~1.2.2",
        "sinon": "~7.1.1"
    },
    "eslintConfig": {
        "env": {
            "es6": true,
            "mocha": true,
            "node": true
        },
        "extends": "plugin:isotropic/isotropic",
        "parserOptions": {
            "ecmaFeatures": {
                "globalReturn": false,
                "impliedStrict": true,
                "jsx": false
            },
            "ecmaVersion": 2018,
            "sourceType": "module"
        },
        "plugins": [
            "isotropic"
        ],
        "root": true,
        "rules": {
            "sort-imports": 0
        }
    },
    "license": "BSD-3-Clause",
    "main": "lib/index.js",
    "name": "presage",
    "nyc": {
        "all": true,
        "cache": true,
        "check-coverage": true,
        "include": [
            "js/*.js",
            "js/*/*.js"
        ],
        "exclude": [
            "lib/*"
        ],
        "instrument": false,
        "reporter": [
            "lcov",
            "text-summary"
        ],
        "require": [
            "@babel/register"
        ],
        "sourceMap": false
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/dsibilly/presage.git"
    },
    "scripts": {
        "build": "BABEL_ENV=build babel js -d lib",
        "coverage": "nyc check-coverage",
        "lint": "node_modules/.bin/eslint js test",
        "posttest": "[ -z \"$npm_config_coverage\" ] || nyc check-coverage",
        "prepare": "npm run build",
        "prepublishOnly": "npm audit && nyc check-coverage",
        "pretest": "npm run lint",
        "rebuild": "rm -rf ./node_modules && rm package-lock.json && npm install",
        "test": "cross-env BABEL_ENV=test nyc mocha"
    },
    "version": "0.2.0"
}
